<?xml version="1.0" encoding="UTF-8"?>
<Window caption="0,0,0,35" shadowattached="true" custom_shadow="20,20,20,20">
  <Box width="360" height="auto">
    <VBox height="auto" bkcolor="bk_wnd_darkcolor">
      <!-- 标题栏按钮 -->
      <HBox height="35" bkcolor="bk_wnd_lightcolor">
        <Control />
        <Button class="btn_wnd_min" name="minbtn" margin="0,6,6,0"/>
        <Button class="btn_wnd_close" name="closebtn" margin="0,6,6,0"/>
      </HBox>
      <!-- 提示信息 -->
      <Label name="login_tip" height="20" margin="20,10,20,0" font="system_12"/>
      <!-- 帐号和密码 -->
      <VBox name="enter_panel" width="320" height="auto" margin="20,10,20,0" bkimage="user_password.png">
        <HBox height="41" padding="14,1,10,0">
          <Control name="usericon" width="16" height="16" valign="center" normalimage="user_1.png" disabledimage="user_2.png"/>
          <RichEdit class="simple prompt" name="username" width="stretch" height="auto" margin="10,0,10,0" valign="center" font="system_14" prompttext="帐号"/>
        </HBox>
        <HBox height="41" padding="14,0,10,1" margin="0,2,0,0">
          <Control name="passwordicon" width="16" height="16" valign="center" normalimage="password_1.png" disabledimage="password_2.png"/>
          <RichEdit class="simple prompt" name="password" width="stretch" height="auto" margin="10,0,10,0" valign="center" font="system_14" password="true" prompttext="密码"/>
        </HBox>
      </VBox>
      <!-- 记住密码|自动登录|忘记密码 -->
      <HBox height="auto">
        <CheckBox class="checkbox_font12" name="checkbox_remember" margin="20,15,0,0" text="记住密码"/>
        <CheckBox class="checkbox_font12" name="checkbox_autologin" margin="20,15,0,0" text="自动登录"/>
        <Control />
        <Button name="forgot_password" margin="0,15,20,0" halign="right" text="忘记密码?" cursortype="hand" font="system_12" normaltextcolor="link_blue"/>
      </HBox>
      <!-- 登录和取消登录 -->
      <Box width="320" height="40" margin="20,20,20,20">
        <Button name="btn_login" width="320" height="40" font="system_16" normaltextcolor="white" text="登录" normalimage="login0.png" hotimage="login1.png" pushedimage="login2.png" disabledimage="login3.png"/>
        <Button name="btn_cancel" width="320" height="40" font="system_16" normaltextcolor="darkcolor" text="取消登录" visible="false" normalimage="file='cancel0.png' corner='10,10,10,10'" hotimage="file='cancel1.png' corner='10,10,10,10'" pushedimage="file='cancel2.png' corner='10,10,10,10'" disabledimage="file='cancel0.png' corner='10,10,10,10' fade='128'"/>
      </Box>
    </VBox>
  </Box>
</Window>